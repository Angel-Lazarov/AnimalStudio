@using AnimalStudio.Web.ViewModels.Animal
@model IEnumerable<AnimalIndexViewModel>
@using static AnimalStudio.Common.ErrorMessages.Animal
@{
	ViewData["Title"] = "My animals";
}

@if (TempData[nameof(DuplicatedAnimal)] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData[nameof(DuplicatedAnimal)]
	</div>
}


<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	@if (User?.Identity?.IsAuthenticated == true)
	{
		<a asp-controller="Animal" asp-action="AddAnimal" class="btn btn-success"><i class="fas fa-plus"></i>Add Animal</a>
	}
</div>
<hr />

<div class="row text-center">
	@foreach (var animal in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@animal.Name</h5>
					<div class="d-flex justify-content-between mt-auto">
						<a asp-controller="Animal" asp-action="AnimalDetails" asp-route-id="@animal.Id" class=" btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Details</a>

						@if (User?.Identity?.IsAuthenticated == true)
						{
							<a asp-controller="Animal" asp-action="EditAnimal" asp-route-id="@animal.Id" class="btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
							<a asp-controller="Animal" asp-action="DeleteAnimal" asp-route-id="@animal.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this animal?');">Delete</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>