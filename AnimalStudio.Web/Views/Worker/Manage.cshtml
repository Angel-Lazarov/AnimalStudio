@using AnimalStudio.Web.ViewModels.Worker
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WorkerViewModel>
@{
	ViewData["Title"] = "Manage workers";
}

<h2 class="my-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center mb-4">
	<a asp-controller="Worker" asp-action="AddWorker" class="btn btn-success btn-sm me-2">
		<i class="bi bi-plus-circle"></i> Add New Worker
	</a>
</div>


<div class="row text-center">
	@foreach (var worker in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">

				@if (!string.IsNullOrEmpty(worker.ImageUrl))
				{
					<img src="@worker.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@worker.Name">
				}
				else
				{
					<img src="~/img/no_image_available.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@worker.Name</h5>
					<div class="d-flex justify-content-center mt-auto">
						<a asp-controller="Worker" asp-action="EditWorker" asp-route-id="@worker.Id" class="btn btn-warning btn-sm me-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Worker" asp-action="DeleteWorker" asp-route-id="@worker.Id" class="btn btn-danger btn-sm me-2" onclick="return confirm('Are you sure you want to delete this worker?');">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
