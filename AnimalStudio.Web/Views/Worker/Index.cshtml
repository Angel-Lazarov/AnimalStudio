@using AnimalStudio.Web.ViewModels
@model IEnumerable<AnimalStudio.Web.ViewModels.WorkerViewModel>
@{
	ViewData["Title"] = "Worker List";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	@if (User?.Identity?.IsAuthenticated == true)
	{
		<a asp-controller="Worker" asp-action="AddWorker" class="btn btn-primary"><i class="fas fa-plus"></i>Add Worker</a>
	}
</div>
<hr />

<div class="row text-center">
    @foreach (var worker in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@worker.Name</h5>
                    <div class="d-flex justify-content-between mt-auto">
                 
                        <a asp-controller="Worker" asp-action="DeleteWorker" asp-route-id="@worker.Id" class="btn btn-info w-100">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>