@using AnimalStudio.Web.ViewModels
@using AnimalStudio.Web.ViewModels.Procedure
@model IEnumerable<ProcedureIndexViewModel>

@{
	ViewData["Title"] = "Procedures List!";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	@if (User?.Identity?.IsAuthenticated == true)
	{
		<a asp-controller="Procedure" asp-action="AddProcedure" class="btn btn-primary"><i class="fas fa-plus"></i>Add ProcedureName</a>
	}
</div>
<hr />

<div class="row text-center">
	@foreach (var procedure in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@procedure.Name</h5>
					<p class="card-text">Price: @procedure.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("bg-BG"))</p>
					<div class="d-flex justify-content-between mt-auto">

						<a asp-controller="Procedure" asp-action="ProcedureDetails" asp-route-id="@procedure.Id" class="btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Details</a>
						@if (User?.Identity?.IsAuthenticated == true)
						{
							<a asp-action="AssignToWorker" asp-route-id="@procedure.Id" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Assign To Worker</a>
							<a asp-controller="Procedure" asp-action="EditProcedure" asp-route-id="@procedure.Id" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
							
							<form asp-controller="Order" asp-action="MakeOrder" method="get" class="d-flex justify-content-center align-items-center flex-fill mx-1">
								<input type="hidden" name="procedureId" value="@procedure.Id" />
								<button type="submit" class="btn btn-success w-100">Buy</button>
							</form>

						}
					</div>
				</div>
			</div>
		</div>
	}
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
