@using AnimalStudio.Web.ViewModels.Procedure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static AnimalStudio.Common.ErrorMessages.Procedure
@model DeleteProcedureViewModel

<h2>Delete Procedure</h2>

@if (TempData[nameof(DeleteProcedureError)] != null)
{
	<div class="alert alert-danger">
		@TempData[nameof(DeleteProcedureError)]
	</div>
}

<p>Are you sure you want to delete the procedure: <strong>@Model.Name</strong>?</p>

<form asp-action="SoftDeleteConfirmed" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Yes, Delete</button>
	<a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>