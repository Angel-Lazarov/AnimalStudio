@using AnimalStudio.Web.ViewModels.Procedure
@model ProcedureDetailsViewModel


@{
	ViewData["Title"] = "Procedures Details!";
}
<h1>@ViewData["Title"]</h1>


<div class="card" style="width: 10rem; margin: 2rem">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<p class="card-text">@Model.Description</p>
		<p class="card-text">@Model.WorkerName</p>
		<p class="card-text">@Model.Price EUR</p>

		<a href="DeleteProcedure" class="btn btn-primary">Delete Procedure</a>
	</div>
</div>



<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
	<div class="col-md-8">
		<div class="card-body">
			<h5 class="card-title">@Model.Name</h5>
			<hr />
			<h6 class="card-subtitle mb-2 text-muted">@Model.Price.ToString("C")</h6>
			<hr />
			<p class="card-text">@Model.Description</p>
			<hr />
			<p class="card-text"><small class="text-muted">Worker: @Model.WorkerName</small></p>
			<hr />
		</div>
		<div class="card-footer text-center">
			<div class="d-flex justify-content-between align-items-center">
				<a asp-controller="Procedure" asp-action="Index" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
					<a asp-controller="Procedure" asp-action="DeleteProcedure" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this procedure?');">Delete</a>
			</div>
		</div>
	</div>
</div>