@using AnimalStudio.Web.ViewModels.AnimalType
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static AnimalStudio.Common.ErrorMessages.AnimalType
@model DeleteAnimalTypeViewModel

<h2>Delete Animal Type</h2>

@if (TempData[nameof(DeleteAnimalTypeError)] != null)
{
	<div class="alert alert-danger">
		@TempData[nameof(DeleteAnimalTypeError)]
	</div>
}

<p>Are you sure you want to delete the Animal Type: <strong>@Model.AnimalTypeName</strong>?</p>

<form asp-action="SoftDeleteConfirmed" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Yes, Delete</button>
	<a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>