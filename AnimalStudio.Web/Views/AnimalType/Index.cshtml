@using AnimalStudio.Web.ViewModels.AnimalType
@model IEnumerable<AnimalTypeViewModel>
@{
	ViewData["Title"] = "Animal Types List";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
	@if (User?.Identity?.IsAuthenticated == true)
	{
		<a asp-controller="AnimalType" asp-action="AddAnimalType" class="btn btn-primary"><i class="fas fa-plus"></i>Add AnimalType</a>
	}
</div>
<hr />

<div class="row text-center">
	@foreach (var animalType in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">
				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@animalType.AnimalTypeInfo</h5>
					<div class="d-flex justify-content-between mt-auto">
						<a asp-controller="AnimalType" asp-action="AnimalTypeDetails" asp-route-id="@animalType.Id" class=" btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Details</a>
						@if (User?.Identity?.IsAuthenticated ?? false)
						{
							<a asp-controller="AnimalType" asp-action="EditAnimalType" asp-route-id="@animalType.Id" class="btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
							<a asp-controller="AnimalType" asp-action="DeleteAnimalType" asp-route-id="@animalType.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this Animal Type?');">Delete</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>