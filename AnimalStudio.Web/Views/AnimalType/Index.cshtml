@using AnimalStudio.Web.ViewModels.AnimalType
@model IEnumerable<AnimalTypeViewModel>
@using static AnimalStudio.Common.ErrorMessages.AnimalType
@{
	ViewData["Title"] = "Animal Types List";
}

@if (TempData[nameof(DuplicatedAnimalType)] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData[nameof(DuplicatedAnimalType)]
	</div>
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row text-center">
	@foreach (var animalType in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">

				@if (!string.IsNullOrEmpty(animalType.ImageUrl))
				{
					<img src="@animalType.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@animalType.AnimalTypeName">
				}
				else
				{
					<img src="~/img/no_image_available.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@animalType.AnimalTypeName</h5>
					<div class="d-flex justify-content-between mt-auto">
						<a asp-controller="AnimalType" asp-action="AnimalTypeDetails" asp-route-id="@animalType.Id" class=" btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Details</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>