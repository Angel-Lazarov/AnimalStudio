@using AnimalStudio.Web.ViewModels.AnimalType
@model IEnumerable<AnimalTypeViewModel>
@{
	ViewData["Title"] = "Manage Animal Types";
}

<h2 class="my-4 text-center">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center mb-4">
	<a asp-controller="AnimalType" asp-action="AddAnimalType" class="btn btn-success btn-sm me-2">
		<i class="bi bi-plus-circle"></i> Add New Animal Type
	</a>
</div>

<hr />

<div class="row text-center">
	@foreach (var animalType in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">

				@if (!string.IsNullOrEmpty(animalType.ImageUrl))
				{
					<img src="@animalType.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@animalType.AnimalTypeName">
				}
				else
				{
					<img src="~/img/no_image_available.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@animalType.AnimalTypeName</h5>
					<div class="d-flex justify-content-center mt-auto">
				
						<a asp-controller="AnimalType" asp-action="EditAnimalType" asp-route-id="@animalType.Id" class="btn btn-warning btn-sm me-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>

						<a asp-controller="AnimalType" asp-action="DeleteAnimalType" asp-route-id="@animalType.Id" class="btn btn-danger btn-sm me-2" onclick="return confirm('Are you sure you want to delete this Animal Type?');">
							<i class="bi bi-trash"></i> Delete
						</a>

					</div>
				</div>
			</div>
		</div>
	}
</div>