@using AnimalStudio.Web.ViewModels.Order
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static AnimalStudio.Common.ErrorMessages.Order
@model DeleteOrderViewModel

<h2>Delete Order</h2>

@if (TempData[nameof(DeleteOrderError)] != null)
{
	<div class="alert alert-danger">
		@TempData[nameof(DeleteOrderError)]
	</div>
}

<p>Are you sure you want to delete the order?</p>

<form asp-action="SoftDeleteConfirmed" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Yes, Delete</button>
	<a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>