<!-- Title Section -->
<div class="container text-center my-5">
	<h1 class="display-4">@ViewData["Title"]</h1>
	<p class="lead">Discover the best specialists and SPA procedures for your animal.</p>
	<hr class="my-4">
</div>

<!-- Welcome Section -->
<div class="bg-dark text-white text-center py-5">
	<div class="container">
		<h2 class="display-5 fw-bold">Your favourite animal studio</h2>
		<p class="mb-4">Find a procedure and explore our specialists.</p>
		<a asp-controller="Procedure" asp-action="Index" class="btn btn-primary btn-lg mx-2">Browse Procedure</a>
		<a asp-controller="Worker" asp-action="Index" class="btn btn-secondary btn-lg mx-2">Explore Workers</a>
	</div>
</div>

<!-- Featured Section -->
<div class="container my-5">
    <h3 class="text-center mb-4">Popular Choices</h3>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Top workers of the Month</h5>
                <p class="card-text">Check out our top-rated workers.</p>
                <a asp-controller="Worker" asp-action="Index" class="btn btn-primary">Explore Workers</a>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Must-buy Procedures</h5>
                <p class="card-text">Take the most used procedure.</p>
                <a asp-controller="Procedure" asp-action="Index" class="btn btn-primary">Browse Procedure</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="container text-center">
        <p>
            Follow us on:
            <a href="#" class="text-muted mx-1">Facebook</a> |
            <a href="#" class="text-muted mx-1">Twitter</a> |
            <a href="#" class="text-muted mx-1">Instagram</a>
        </p>
    </div>
</div>