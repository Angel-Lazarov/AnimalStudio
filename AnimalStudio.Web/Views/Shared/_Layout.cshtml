@using static AnimalStudio.Common.ApplicationConstants
@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ? $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalStudio.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimalStudio.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnimalSpa.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        

                        

                        <li class="nav-item dropdown">
	                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">My Zone</a>
	                        <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">My Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="Animal" asp-action="MyIndex">My Animals</a></li>
	                        </ul>
                        </li>
                        
                        
                        

                        

                        <li class="nav-item dropdown">
	                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Orders</a>
	                        <ul class="dropdown-menu">
		                        <li><a class="dropdown-item" asp-controller="Order" asp-action="AddOrder">Add order(admin)</a></li>
		                        <li><div class="dropdown-divider"></div></li>
		                        <li><a class="dropdown-item" asp-controller="Order" asp-action="IndexAll">All Orders</a></li>
	                        </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
	                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Animals</a>
	                        <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Animal" asp-action="AddAnimal">Add Animal</a></li>
		                        <li><div class="dropdown-divider"></div></li>
                                <li><a class="dropdown-item" asp-controller="Animal" asp-action="Index">All Animals</a></li>
	                        </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Workers</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Worker" asp-action="AddWorker">Add Worker(admin)</a></li>
                                <li><div class="dropdown-divider"></div></li>
                                <li><a class="dropdown-item" asp-controller="Worker" asp-action="Index">Workers List</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Procedure Menu</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Procedure" asp-action="AddProcedure">Add Procedure(admin)</a></li>
                                <li><div class="dropdown-divider"></div></li>
                                <li><a class="dropdown-item" asp-controller="Procedure" asp-action="Index">Procedure List</a></li>
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">AnimalType Menu</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AnimalType" asp-action="AddAnimalType">Add Animal Type(admin)</a></li>
                                <li><div class="dropdown-divider"></div></li>
                                <li><a class="dropdown-item" asp-controller="AnimalType" asp-action="Index">Animal Type List</a></li>
                            </ul>
                        </li>
                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @footerNote - AnimalStudio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
