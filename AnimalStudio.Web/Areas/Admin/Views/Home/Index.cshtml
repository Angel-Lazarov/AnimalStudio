<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-primary">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">Add, edit, or remove users and assign roles.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-danger mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
	        <div class="card shadow h-100 border-0">
		        <div class="card-body d-flex flex-column align-items-center text-center">
			        <i class="fas fa-video fa-3x text-info mb-3"></i>
			        <h5 class="card-title">Manage Animals</h5>
			        <p class="card-text text-muted">Edit, get details, or delete animal.</p>
			        <a asp-area="" asp-controller="Animal" asp-action="Manage" class="btn btn-info mt-auto w-100">
				        Go to Animals
			        </a>
		        </div>
	        </div>
        </div>
        
        <div class="col-md-4">
	        <div class="card shadow h-100 border-0">
		        <div class="card-body d-flex flex-column align-items-center text-center">
			        <i class="fas fa-video fa-3x text-info mb-3"></i>
			        <h5 class="card-title">Manage Orders</h5>
			        <p class="card-text text-muted">Explore orders, or remove them.</p>
			        <a asp-area="" asp-controller="Order" asp-action="Manage" class="btn btn-info mt-auto w-100">
				        Go to Orders
			        </a>
		        </div>
	        </div>
        </div>
        
        <div class="col-md-4">
	        <div class="card shadow h-100 border-0">
		        <div class="card-body d-flex flex-column align-items-center text-center">
			        <i class="fas fa-video fa-3x text-info mb-3"></i>
			        <h5 class="card-title">Manage Procedures</h5>
					<p class="card-text text-muted">Add, Assign to worker, edit, view details, or remove procedure.</p>
			        <a asp-area="" asp-controller="Procedure" asp-action="Manage" class="btn btn-info mt-auto w-100">
				        Go to Procedures
			        </a>
		        </div>
	        </div>
        </div>
		
        <div class="col-md-4">
	        <div class="card shadow h-100 border-0">
		        <div class="card-body d-flex flex-column align-items-center text-center">
			        <i class="fas fa-video fa-3x text-info mb-3"></i>
			        <h5 class="card-title">Manage Animal Types</h5>
			        <p class="card-text text-muted">Add, edit, view details, or remove animal type.</p>
			        <a asp-area="" asp-controller="AnimalType" asp-action="Manage" class="btn btn-info mt-auto w-100">
				        Go to Animal Types
			        </a>
		        </div>
	        </div>
        </div>
		
        <div class="col-md-4">
	        <div class="card shadow h-100 border-0">
		        <div class="card-body d-flex flex-column align-items-center text-center">
			        <i class="fas fa-video fa-3x text-info mb-3"></i>
					<h5 class="card-title">Manage Workers</h5>
			        <p class="card-text text-muted">Addy, edit, or remove worker.</p>
			        <a asp-area="" asp-controller="Worker" asp-action="Manage" class="btn btn-info mt-auto w-100">
						Go to Workers
			        </a>
		        </div>
	        </div>
        </div>
    </div>
</div>
